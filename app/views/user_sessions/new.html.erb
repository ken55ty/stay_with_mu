<div class="flex justify-center items-center h-screen">

        <%= form_with model: @user, local: true do |form| %>
            <h1 class="mb-10">ログイン</h1>

          <div class= "mb-3">
            <div class= 'flex flex-row'>
              <%= form.label :email, class:'ml-2'%>
            </div>
            <%= form.email_field :email, class: 'w-full bg-card-body text-theme rounded-lg py-2 px-3'  %>
          </div>

          <div class= "mb-3">
            <div class= 'flex flex-row'>
              <%= form.label :password, class:'ml-2'%>
            </div>
            <%= form.password_field :password, class: 'w-full bg-card-body text-theme rounded-lg py-2 px-3'  %>
          </div>


          <div class="flex justify-center">
            <%= form.submit 'ログイン', class: "btn btn-secondary" %>
          </div>
      <% end %>
</div>