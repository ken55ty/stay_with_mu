<div id="comment-form", data-controller="textarea", class="w-full flex flex-col">
  <%= form_with model: comment, url: [music, comment], data: { turbo_method: :post } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
      <%= f.text_area :body, data: { textarea_target: "textarea" }, class: "w-[18rem] sm:w-[32rem] min-h-24 bg-base-300 textarea textarea-bordered my-2 p-1 rounded-lg" %>
    </div>
    <%= f.submit "追加する", class: "btn btn-primary" %>
  <% end %>
</div>