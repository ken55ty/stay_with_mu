<% content_for(:title, t('.title')) %>
<div class="flex justify-center items-center">

  <%= form_with model: @user, local: true do |form| %>
      <h1 class="mb-10">プロフィール編集</h1>
      <%= render 'shared/error_messages', object: form.object %>
    <div class= "mb-3">
      <div class= 'flex flex-row'>
        <%= form.label :name, class:'ml-2'%>
      </div>
      <%= form.text_field :name, class: "w-full bg-card-body text-theme rounded-lg py-2 px-3" %>
    </div>

    <div class="mb-3">
      <div class= 'flex flex-row'>
        <%= form.label :profile, class:'ml-2'%>
      </div>
        <%= form.text_area :profile, class: "w-full h-100 bg-card-body text-theme rounded-lg py-2 px-3" %>
    </div>
<h1 class="text-center py-4 text-xl">アイコンは準備中です🙇‍♂️</h1>
    <div class="flex justify-center">
      <%= form.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>