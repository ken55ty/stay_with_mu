
<div class="flex p-3">
  <div class="bg-base-100">
    <iframe src="https://open.spotify.com/embed/track/<%= music.spotify_track_id %>" width="100%" height="80" frameborder="0" style="border-radius:12px" allowtransparency="true" allow="encrypted-media"></iframe>
    <div class="p-2 bg-base-300 rounded-lg">
      <%= link_to music_path(music), class: "#{levelclass(music.level)} underline hover:text-blue-600 mb-2" do %>
        <p><%=  music.title %></p>
        <div class="flex justify-between">
          <span><%= music.artist %></span>
          <span class="mb-2"><%= "Lv. #{music.level}" %></span>
        </div>
      <% end %>
      <div class="flex justify-end">
      <%= render 'musics/favorite_button', music: music %>
      </div>
        <%= link_to user_path(music.user) do %>
        <div class="flex">
          <% if music.user.avatar? %>
            <div class="avatar">
              <div class="rounded-full">
                <%= image_tag music.user.avatar.url(:avatar) %>
              </div>
            </div>
            <% else %>
              <%= image_tag "default_avatar.png", size: "40x40" %>
          <% end %>
          <p class="p-2 link">  <%= music.user.name %> </p>
        </div>
        <% end %>

      <div class="justify-end">
        <% latest_memory = music.memories.order(created_at: :desc).first %>
        <% if latest_memory %>
          <% latest_memory.tags.each do |tag| %>
            <div class="badge badge-primary">
              <%= tag.name %>
            </div>
          <% end %>

          <% if latest_memory.body.size >= 16 %>
            <p><%= latest_memory.body.slice(0..16) %>...</p>
          <% else %>
            <p><%= latest_memory.body %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
